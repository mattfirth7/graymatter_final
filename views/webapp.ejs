<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head'); -%>
	</head>

	<body class="bg-3">
		<%- include('partials/menu'); -%>

		<form class="form-inline" action="/predict-data" enctype="multipart/form-data" method="POST">
			<div class="form-row align-items-center">
				<div class="col-auto my-1">
					<input class="form-control" type="text" value="<%= modelName %>" name='<%= modelName %>'> <br>
					<% for (var i=0; i<featureNames.length; i++) { %>
						<%if ((i+1)%3 == 0) { %>
							<input class="form-control" type="text" placeholder='<%= featureNames[i] %>' name='<%= featureNames[i] %>'> <br>
						<% } else { %>
						<input class="form-control" type="text" placeholder='<%= featureNames[i] %>' name='<%= featureNames[i] %>'>
						<% } %>
					<% } %>
				</div>
			</div>
			<button type="submit" class="btn btn-default">Predict</button>
		</form>
	</body>
	<%- include('partials/script'); -%>
</html>
